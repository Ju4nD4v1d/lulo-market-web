# Environment
# Set to 'development' for local, 'production' for live
VITE_ENV=development

# Firebase Configuration
# Get these from Firebase Console > Project Settings > Your apps
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_MEASUREMENT_ID=

# Stripe Configuration
# Get from Stripe Dashboard > Developers > API Keys
# Use pk_test_... for development, pk_live_... for production
VITE_STRIPE_PUBLISHABLE_KEY=
VITE_STRIPE_MODE=test

# Google Maps
# Get from Google Cloud Console > Credentials
VITE_GOOGLE_MAPS_API_KEY=

# Cloud Function Endpoints
# These are the Cloud Run/Functions URLs for backend services
VITE_RECEIPT_ENDPOINT=
VITE_PAYMENT_INTENT_ENDPOINT=
VITE_INVITATION_ENDPOINT=
VITE_STRIPE_WEBHOOK_ENDPOINT=

# Note: Platform fee is now configured via Admin panel and stored in Firestore
# See platformFeeConfig collection (default $0.99 CAD)
