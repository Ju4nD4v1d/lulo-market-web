rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Legal agreements - publicly readable (terms, policies)
    match /legal_agreements/{agreementId} {
      allow read: if true;
      allow write: if false; // Admin only via Firebase Console
    }

    // Store acceptances - store owners can read/write their own
    // Read is allowed for authenticated users (acceptances aren't sensitive data)
    // Write is restricted to the owner
    match /store_acceptances/{storeId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update: if request.auth != null && resource.data.ownerId == request.auth.uid;
      allow delete: if false;
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Stores collection
    match /stores/{storeId} {
      allow read: if true; // Public store info
      allow create: if request.auth != null;
      allow update: if request.auth != null && resource.data.ownerId == request.auth.uid;
      allow delete: if false;
    }

    // Products collection
    match /products/{productId} {
      allow read: if true; // Public product info
      allow write: if request.auth != null;
    }

    // Orders collection
    match /orders/{orderId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if false;
    }

    // Drivers collection (admin only write, authenticated read)
    match /drivers/{driverId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Waitlist collection
    match /waitlist/{entryId} {
      allow create: if true; // Anyone can join waitlist
      allow read: if request.auth != null && request.auth.token.admin == true;
      allow update, delete: if false;
    }

    // Delivery Fee Configuration - admin only
    // Used by delivery fee simulator and settings in admin dispatcher page
    match /deliveryFeeConfig/{docId} {
      allow read, write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin';
    }

    // Platform Fee Configuration
    // Read: Authenticated users (needed for checkout)
    // Write: Admin only with validation (fee must be between $0 and $50)
    match /platformFeeConfig/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin' &&
        request.resource.data.fixedAmount >= 0 &&
        request.resource.data.fixedAmount <= 50;
    }

    // Default deny for any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
