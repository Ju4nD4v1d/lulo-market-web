rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================================================
    // HELPER FUNCTIONS
    // ============================================================================

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if user is the resource owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Check if user is admin
    function isAdmin() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin';
    }

    // Check if user is store owner
    function isStoreOwner(storeId) {
      return isAuthenticated() &&
             request.auth.uid == get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId;
    }

    // ============================================================================
    // USERS
    // ============================================================================

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();

      // Allow create for new users
      allow create: if isOwner(userId);

      // Allow update but protect backend-managed fields
      allow update: if isOwner(userId) &&
                       // Prevent users from writing backend-managed fields
                       !request.resource.data.diff(resource.data).affectedKeys().hasAny([
                         'totalOrders'  // Managed by payment webhook
                       ]);

      // Allow delete only by admins
      allow delete: if isAdmin();
    }

    // ============================================================================
    // STORES
    // ============================================================================

    match /stores/{storeId} {
      // Public read - anyone can browse stores
      allow read: if true;

      // Authenticated users can create stores
      allow create: if isAuthenticated();

      // Store owner can update, but cannot modify backend-managed fields
      allow update: if isAuthenticated() &&
                       request.auth.uid == resource.data.ownerId &&
                       !request.resource.data.diff(resource.data).affectedKeys().hasAny([
                         'isMarketplaceReady',
                         'marketplaceReadyAt',
                         'marketplaceReadyCheckedAt',
                         'stripeEnabled',
                         'stripePayoutsEnabled',
                         'stripeDetailsSubmitted',
                         'stripeAccountStatus',
                         'stripeUpdatedAt',
                         'stripeConnectedAt'
                       ]);

      // Store owner or admin can delete
      allow delete: if isAuthenticated() &&
                       (request.auth.uid == resource.data.ownerId || isAdmin());

      // Store subcollections - owner can read/write
      match /{subcollection=**} {
        allow read: if true;
        allow write: if isStoreOwner(storeId);
      }
    }

    // ============================================================================
    // PRODUCTS
    // ============================================================================

    match /products/{productId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // ============================================================================
    // ORDERS
    // ============================================================================

    match /orders/{orderId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();

      // Order subcollections (orderDetails, etc.)
      match /{subcollection=**} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
      }
    }

    // ============================================================================
    // LEGAL AGREEMENTS (Terms, Policies - publicly readable)
    // ============================================================================

    match /legal_agreements/{agreementId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ============================================================================
    // STORE ACCEPTANCES (Legal agreement acceptances per store)
    // Uses nested structure: { sellerAgreement: { accepted: bool, ... }, ... }
    // ============================================================================

    match /store_acceptances/{storeId} {
      // Store owner can read their own, admin can read all
      allow read: if isAuthenticated() && (isStoreOwner(storeId) || isAdmin());

      // Store owner can create/update their own acceptances
      allow create: if isAuthenticated() &&
                       request.resource.data.ownerId == request.auth.uid;

      allow update: if isAuthenticated() &&
                       resource.data.ownerId == request.auth.uid;

      // No deletes - set accepted to false instead
      allow delete: if false;
    }

    // ============================================================================
    // DRIVERS (Dispatcher management)
    // Public read: needed for delivery time calculations on cart/checkout
    // ============================================================================

    match /drivers/{driverId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ============================================================================
    // PHONE REGISTRY (For checking phone availability during registration)
    // Only stores phone number existence, no user data exposed
    // ============================================================================

    match /phoneRegistry/{phoneId} {
      // Public read - needed to check phone availability before registration
      allow read: if true;

      // Only authenticated users can create, AND document must not already exist
      // This prevents race conditions where two users register the same phone
      allow create: if isAuthenticated() &&
                       !exists(/databases/$(database)/documents/phoneRegistry/$(phoneId));

      // No updates allowed
      allow update: if false;

      // Allow delete only by the user who created it (for rollback on failed registration)
      // or by admins for cleanup
      allow delete: if isAuthenticated() &&
                       (resource.data.createdBy == request.auth.uid || isAdmin());
    }

    // ============================================================================
    // WAITLIST
    // ============================================================================

    match /waitlist/{entryId} {
      allow create: if true;
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    // ============================================================================
    // CONFIGURATION COLLECTIONS
    // ============================================================================

    // Delivery Fee Configuration - admin only
    match /deliveryFeeConfig/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Platform Fee Configuration - public read for cart calculations
    match /platformFeeConfig/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ============================================================================
    // ANALYTICS COLLECTIONS (Backend-managed, authenticated read)
    // ============================================================================

    // Current week metrics per store
    match /currentWeekMetrics/{docId} {
      allow read: if isAuthenticated();
      allow write: if false; // Backend only via Admin SDK
    }

    // Active customers tracking
    match /activeCustomers/{docId} {
      allow read: if isAuthenticated();
      allow write: if false; // Backend only via Admin SDK
    }

    // Monthly revenue summaries
    match /monthlyRevenueSummary/{docId} {
      allow read: if isAuthenticated();
      allow write: if false; // Backend only via Admin SDK

      match /customers/{customerId} {
        allow read: if isAuthenticated();
        allow write: if false;
      }
    }

    // General analytics (topProducts, etc.)
    match /analytics/{docId} {
      allow read: if isAuthenticated();
      allow write: if false; // Backend only via Admin SDK
    }

    // Top products - public read for homepage
    match /analytics/topProducts {
      allow read: if true;
      allow write: if false;
    }

    // Product sales tracking
    match /productSales/{docId} {
      allow read: if isAuthenticated();
      allow write: if false; // Backend only via Admin SDK
    }

    // Search analytics
    match /searchAnalytics/{docId} {
      allow read: if isAuthenticated();
      allow write: if false; // Backend only via Admin SDK
    }

    // ============================================================================
    // BACKEND-ONLY COLLECTIONS
    // ============================================================================

    // Invitation requests - backend manages
    match /invitationRequests/{docId} {
      allow read: if isAdmin();
      allow write: if false; // Backend only
    }

    // Rate limiting - backend manages
    match /rateLimits/{docId} {
      allow read, write: if false; // Backend only
    }

    // ============================================================================
    // CATCH-ALL: Deny by default for unlisted collections
    // ============================================================================

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
